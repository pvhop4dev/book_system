        "/api/v1/books": {
            "get": {
                "description": "Get a paginated list of books with optional filters",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "books"
                ],
                "summary": "List all books with pagination",
